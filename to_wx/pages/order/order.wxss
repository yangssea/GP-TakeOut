.o-block{
  margin: 0.5rem;
  padding-top: 1rem; 
}
.ob-left{
  width: 2.5rem;
  height: 2.5rem;
  float: left
}
.ob-right{
  float: left;
   width: 85%;
}
.ob1-left{
  float: left;
  font-size: 1rem;
  margin-left: 0.5rem;
}
.ob1-right{
  float: right;
  font-size: 0.8rem; 
  margin-left: 0.5rem;
  margin-top: 0.2rem;
}
.ob-time{
  font-size: 0.5rem;
  margin-left: 0.5rem;
  color: gray;
  padding-bottom: 0.2rem;
  border-bottom: 1px solid #f7f7f7;
}
.ob-tc{
  font-size: 0.8rem;
